@model IEnumerable<scratch.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-hover">
    
    <thead>
        <tr>
            <th>Movie Name</th>
            <th>Genre</th>
        </tr>
        
    </thead>


    <tbody>
        @foreach (var movie in @Model)
        {
            <tr>
                <td>@Html.ActionLink(@movie.Name,"Details","Movies",new {id = movie.GenreId },null) </td>
                <td>@movie.GenreType.Type</td>
            </tr>
        }
    </tbody>


</table>